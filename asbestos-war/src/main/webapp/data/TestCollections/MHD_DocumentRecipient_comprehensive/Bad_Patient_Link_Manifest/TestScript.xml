<TestScript xmlns="http://hl7.org/fhir">
    <fixture id="pdb-bundle">
        <autocreate value="false"/>
        <autodelete value="false"/>
        <resource>
            <reference value="Bundle/pdb.xml"/>
        </resource>
    </fixture>
    <fixture id="patient_bundle">
        <!--
           This patient comes out of the test Patient cache
        -->
        <autocreate value="false"/>
        <autodelete value="false"/>
        <resource>
            <reference value="Patient/Alex_Alder"/>
        </resource>
    </fixture>
    <variable>   <!-- referenced in pdb -->
    	<name value="patientResourceId"/>
    	<expression value="Bundle.entry.fullUrl"/>
      <sourceId value="patient_bundle"/>
    </variable>
    <variable>
      <name value="manifestMasterIdentifier"/>
      <expression value="Bundle.entry.select(resource as DocumentManifest).masterIdentifier.value"/>
      <sourceId value="pdb-bundle"/>
    </variable>
    <variable>
      <name value="referenceMasterIdentifier"/>
      <expression value="Bundle.entry.select(resource as DocumentReference).masterIdentifier.value"/>
      <sourceId value="pdb-bundle"/>
    </variable>
    
    <test>
        <description value="Submit."/>
        <action>
            <operation>
                <!-- references patient from resourceCache in EC -->
                <description value="send PDB."/>
                <label value="create"/>
                <type>
                    <system value="https://github.com/usnistgov/asbestos/wiki/Testscript-Operation-Codes"/>
                    <code value="mhd-pdb-transaction"/>
                </type>
                <sourceId value="pdb-bundle"/>
                <responseId value="pdb-response-bundle"/>
            </operation>
        </action>
        <action>
            <assert>
                <description value="Must fail."/>
                <response value="bad"/>
                <warningOnly value="false"/>
            </assert>
        </action>
    </test>
    <test>
      <description value="Verify no updates to server."/>
      <action>
        <operation>
				  <description value="search for DocumentManifest."/>
				  <type>
					  <code value="search"/>
				  </type>
				  <resource value="DocumentManifest"/> 
				  <contentType value="json"/>
				  <params value="?identifier=${manifestMasterIdentifier}"/> 
				  <responseId value="patient1-search"/>
			  </operation>
      </action>
    </test>
</TestScript>
