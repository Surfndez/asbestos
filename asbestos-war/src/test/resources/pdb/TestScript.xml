<TestScript>
    <fixture id="pdb-request">
        <autocreate value="false"/>
        <autodelete value="false"/>
        <resource>
            <reference value="Bundle/pdb.xml"/>
        </resource>
    </fixture>
    <fixture id="thePatient">
        <autocreate value="false"/>
        <autodelete value="false"/>
        <resource>
            <reference value="Patient/patient.xml"/>
        </resource>
    </fixture>
    <variable>
        <name value="FirstName"/>
        <expression value="Patient.name.given"/>
        <sourceId value="thePatient"/>
    </variable>
    <variable>
        <name value="LastName"/>
        <expression value="Patient.name.family"/>
        <sourceId value="thePatient"/>
    </variable>
    <variable>
        <name value="birthDate"/>
        <expression value="Patient.birthDate"/>
        <sourceId value="thePatient"/>
    </variable>

    <test>
        <action>
            <operation>
                <description value="send PDB."/>
                <label value="create"/>
                <type>
                    <system value="https://github.com/usnistgov/asbestos/wiki/Testscript-Operation-Codes"/>
                    <code value="mhd-pdb-transaction"/>
                </type>
                <sourceId value="pdb-request"/>
                <responseId value="pdb-response"/>
            </operation>
        </action>
    </test>
</TestScript>
